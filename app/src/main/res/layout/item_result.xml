<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    >

    <TextView
        android:id="@+id/result_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="4dip"
        android:paddingLeft="8dip"
        android:paddingRight="4dip"
        android:text="文章标题"
        android:lines="2"
        android:background="@color/black"
        android:ellipsize="end"
        android:textColor="@color/white"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/result_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:paddingLeft="4dip"
        android:paddingRight="4dip"
        android:text="文章内容"
        android:lines="2"
        android:ellipsize="end"
        android:textColor="@color/bggray"
        android:textSize="12sp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/publish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="2016-01-01"
            android:textColor="@color/bggray"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/publish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dip"
            android:textColor="@color/bggray"
            android:text="作者ID"
            android:textSize="12sp"
            android:layout_toLeftOf="@id/publish_time"
            />

        <com.example.luo.view.CircleImageView
            android:id="@+id/iscollect"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/publish_name"
            />

    </RelativeLayout>

</LinearLayout>