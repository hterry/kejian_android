<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dip">

        <ImageView
            android:id="@+id/bs1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/weixin_timeline"
            android:layout_marginRight="20dip"
            android:scaleType="fitCenter"/>
        <ImageView
            android:id="@+id/bs2"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="20dip"

            android:src="@drawable/weixin"
            android:scaleType="fitCenter"/>
        <ImageView
            android:id="@+id/bs3"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="20dip"

            android:src="@drawable/sina_logo"
            android:scaleType="fitCenter"/>
        <ImageView
            android:id="@+id/bs4"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/qq"
            android:layout_marginRight="20dip"
            android:scaleType="fitCenter"/>
        <ImageView
            android:id="@+id/bs5"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/qzone"
            android:scaleType="fitCenter"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dip">

        <ImageView
            android:id="@+id/bs6"
            android:visibility="gone"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/alipay_copy"
            android:layout_marginRight="10dip"
            android:scaleType="fitCenter"/>
        <ImageView
            android:id="@+id/bs7"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dip"
            android:src="@drawable/umeng_socialize_gmail_on"
            android:scaleType="fitCenter"/>
        <ImageView
            android:id="@+id/bs8"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dip"
            android:src="@drawable/umeng_socialize_evernote"
            android:scaleType="fitCenter"/>
        <ImageView
            android:id="@+id/bs9"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/umeng_socialize_sms_on"
            android:layout_marginRight="10dip"

            android:scaleType="fitCenter"/>
        <ImageView
            android:id="@+id/bs10"
            android:layout_width="0dip"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/umeng_socialize_tx_on"
            android:scaleType="fitCenter"/>

    </LinearLayout>

</LinearLayout>