<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:focusableInTouchMode="false"
    android:focusable="false"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#898989"
        ></LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:paddingLeft="12dip"
        android:paddingRight="20dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/utime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/gray2"
                android:text="2016-02-02"/>

            <TextView
                android:id="@+id/ucontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:textColor="@color/grey"
                android:textSize="14sp"
                android:text="aasaasdavscxv;lkdjg;lmasjv;in;idac名的减肥；Il"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#898989"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="12dip"
            ></LinearLayout>

        <LinearLayout
            android:id="@+id/tly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="40dip"
                android:layout_marginRight="12dip"
                android:layout_height="wrap_content">
                <com.weiguan.kejian.view.CircleImageView
                    android:id="@+id/uavator"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:src="@drawable/default_user_pic"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tuserid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:text="USERID"/>

                </RelativeLayout>
                <TextView
                    android:id="@+id/tcontent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:textSize="14sp"
                    android:text="留言内容，巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#898989"
        android:layout_marginBottom="2dip"
        ></LinearLayout>
</LinearLayout>