<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_bg"
    android:background="#E6E6E6"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/searchbar"
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:paddingBottom="8dip"
        android:paddingLeft="8dip"
        android:paddingRight="8dip"
        android:paddingTop="2dip"
        android:background="@color/black"
        >

        <Button
            android:id="@+id/startsearch"
            android:layout_width="84dip"
            android:layout_height="32dip"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="@color/green"
            android:layout_alignParentRight="true"/>

        <EditText
            android:id="@+id/keyword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dip"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:paddingLeft="6dip"
            android:background="@color/white"
            android:singleLine="true"
            android:inputType="text"
            android:cursorVisible="true"
            android:textSize="18sp"
            android:imeOptions="actionSend"
            android:textColor="@color/black"
            android:layout_toLeftOf="@id/startsearch"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menubar"
        android:layout_width="match_parent"
        android:layout_height="36dip"
        android:layout_below="@id/searchbar"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/drow"
            android:layout_width="10dip"
            android:layout_height="8dip"
            android:layout_marginLeft="14dip"
            android:layout_marginRight="14dip"
            android:layout_centerVertical="true"
            android:src="@drawable/down_arrow"/>

        <TextView
            android:id="@+id/select_sort"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/drow"
            android:text="按发布时间排列"
            android:textSize="12sp"
            android:textColor="@color/grey"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="180dip"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:id="@+id/tvly">

            <CheckBox
                android:id="@+id/issortfromuser"
                android:layout_width="12dip"
                android:layout_height="12dip"
                android:layout_marginTop="8dip"
                android:layout_marginBottom="8dip"
                android:layout_marginRight="8dip"
                android:layout_toLeftOf="@+id/tv"
                android:layout_centerVertical="true"
                android:checked="false"
                android:textColor="#B1B8C1"
                android:paddingRight="14dip"
                android:button="@null"
                android:background="@drawable/isnoname"
                />

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:textColor="@color/grey"
                android:paddingRight="8dip"
                android:text="我收藏过或参与过的文章"
                />
        </RelativeLayout>
    </RelativeLayout>

    <com.weiguan.kejian.view.view.XListView
        android:id="@+id/result_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/menubar"
        android:divider="@color/bggray"
        android:dividerHeight="2dip"
        >
    </com.weiguan.kejian.view.view.XListView>
    <LinearLayout
        android:id="@+id/sortly"
        android:layout_width="110dip"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchbar"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="29dip"
        android:layout_marginLeft="24dp">
        <TextView
            android:id="@+id/sort1"
            android:layout_width="match_parent"
            android:background="@drawable/sp_top"
            android:paddingTop="10dip"
            android:text="按留言数量排列"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_height="46dip">
        </TextView>
        <TextView
            android:id="@+id/sort2"
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:paddingTop="4dip"
            android:text="按喜爱数量排列"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@drawable/sp_content"
            >
        </TextView>
        <TextView
            android:id="@+id/sort3"
            android:layout_width="match_parent"
            android:layout_height="46dip"
            android:text="按发布时间排列"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@drawable/sp_bottom">
        </TextView>

    </LinearLayout>

</RelativeLayout>